<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddExerciseFragmentId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DB000000"
    android:padding="16dp"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    tools:context=".AddExerciseFragment">

    <Button
        android:id="@+id/AddingId"
        android:layout_width="177dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/buttons"
        android:text="Adding"
        android:textColor="#DAD3D3"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.892" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="294dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fields"
        android:gravity="center"
        android:hint=" Name"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textColorHint="#7A7474"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/SeekBarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rest"
        android:textColor="#AAA8A8"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/SeekBarId" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="68dp"
        android:layout_height="57dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="0:00"
        android:textColor="#AAA8A8"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextKg" />

    <EditText
        android:id="@+id/editTextSets"
        android:layout_width="58dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/fields"
        android:ems="10"
        android:gravity="center"
        android:hint="Sets"
        android:inputType="number"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textColorHint="#7A7474"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText" />

    <EditText
        android:id="@+id/editTextKg"
        android:layout_width="58dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/fields"
        android:ems="10"
        android:gravity="center"
        android:hint="kg"
        android:inputType="number"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textColorHint="#7A7474"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextSets"
        app:layout_constraintStart_toEndOf="@+id/editTextSets" />

</androidx.constraintlayout.widget.ConstraintLayout>